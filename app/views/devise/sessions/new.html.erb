<div class="container">
  <div class="container-login">
    <h1 class="text-white">Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, hidden: true %><br />
        <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, hidden: true %><br />
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me  do %>
            <span></span> Remember me
          <% end %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Let me in", class: "login-button" %>
      </div>
    <% end %>

  <%# render "devise/shared/links" %>
  </div>
</div>

